{
  "name": "express-studies",
  "version": "2.3.1",
  "description": "",
  "type": "module",
  "main": "app.js",
  "scripts": {
    "start": "node ./build/app.js",
    "dev": "clear && nodemon --exec 'npm run build' --watch './src' --ext 'js, ts, html, style'",
    "build": "rimraf ./build && npx tsc && npm run tailwind && npm run copyfiles && cls || clear && echo 'FINISH BUILDING' && nodemon ./build/app.js",
    "tsc": "npx tsc",
    "tailwind": "npx tailwindcss -i src/view/public/assets/tailwind.css -o src/view/public/assets/global.css",
    "copyfiles": "copyfiles -u 1 'src/**/*.html' 'src/**/*.css' ./build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.7",
    "express": "^4.21.1",
    "fs": "^0.0.1-security",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.7",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/typescript": "^2.0.0",
    "copyfiles": "^2.4.1",
    "dotenv": "^16.4.5",
    "nodemon": "^3.1.7",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.6.3"
  }
}